image:
  prometheus: {{ kube_image_repository }}/prometheus:{{ prometheus_image_tag }}
  pushgateway: {{ kube_image_repository }}/pushgateway:{{ prometheus_image_tag }}
  alertmanager: {{ kube_image_repository }}/alertmanager:{{ prometheus_image_tag }}
  node_exporter: {{ kube_image_repository }}/node-exporter:{{ prometheus_image_tag }}
  event_exporter: {{ kube_image_repository }}/event-exporter:{{ prometheus_image_tag }}
  collectd_exporter: {{ kube_image_repository }}/collectd-exporter:{{ prometheus_image_tag }}
  host_exporter: {{ kube_image_repository }}/host-exporter:{{ prometheus_image_tag }}
  pushgateway_cleaner: {{ kube_image_repository }}/prometheus-pushgateway-cleaner:{{ prometheus_image_tag }}
  thanos: {{ kube_image_repository }}/thanos:{{ prometheus_image_tag }}
  pullSecrets: {{ docker_register_secrets_name }}
  
architecture: "{{ ansible_architecture }}"
replica: "{{ replica_num }}"
priorityClassName: "{{ kube_priority_name }}"
pushgatewayVIP: "{{ fsd_proxy_ip }}"
nodeSelector:
  {{ control_node_role_name }}: {{ node_role_value }}

affinity:
  key: {{ control_node_role_name }}
  value: {{ node_role_value }}

prometheusServerIP:
  {% for host in groups['prometheus'] -%}
  - "{{ hostvars[host]['ansible_' + hostvars[host]['api_interface']]['ipv4']['address'] }}"
  {% endfor %}

alert_rule_dir: "{{ prometheus_alert_rule_dir }}"
alertmanager_dir: "{{ prometheus_alertmanager_dir }}"
serviceAccountName: prometheus
pushgateway_cleaner_job:
  cron: "{{ pushgateway_clean_time }}"
  history:
    success: 3
    failed: 1

hostNetwork: {{ prometheus_hostnetwork }}
ingress: 
  enabled: false
  ingressClassName: {{ ingress_class_name }}

service:
  query:
    port: {{ prometheus_query_port }}
  prometheus:
    port: {{ prometheus_server_port }}
  sidecar:
    http_port: {{ thanos_sidecar_http_port }}
    grpc_port: {{ thanos_sidecar_grpc_port }}
  alertmanager:
    port: {{ prometheus_alertmanager_port }}
  alertmanager_cluster:
    port: {{ prometheus_alertmanager_cluster_port }}
  pushgateway:
    port: {{ prometheus_pushgateway_port }}
  node_exporter:
    port: {{ prometheus_node_exporter_port }}
  collectd_exporter:
    port: {{ prometheus_collectd_exporter_port }}
    udp_port: {{ prometheus_collectd_udp_port }}
  host_exporter:
    port: {{ prometheus_host_exporter_port }}
  event_exporter:
    port: {{ prometheus_event_exporter_port }}
