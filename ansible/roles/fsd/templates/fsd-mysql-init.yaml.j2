apiVersion: batch/v1
kind: Job
metadata:
  name: klcloud-fsd-init
  namespace: {{ helm_install_namespace }}
spec:
  template:
    spec:
      containers:
        - name: fsd-init
          image: {{ kube_image_repository }}/fsd_init{% if ansible_architecture == "aarch64" %}_arm{% endif %}:{{ kube_image_tag }}
          env:
            - name: fsd_init_db_vip
              value: "mariadb"
            - name: fsd_init_db_password
              value: "{{ mariadb_root_password }}"
          imagePullPolicy: IfNotPresent
          volumeMounts:
            - name: fsd-init-static
              mountPath: /home/tmp
            - name: fsd-init-trochilus
              mountPath: /home/trochilus
      restartPolicy: Never
      volumes:
        - name: fsd-init-static
          hostPath:
            path: "{{ fsd_static_dir }}"
            type: DirectoryOrCreate
        - name: fsd-init-trochilus
          hostPath:
            path: "{{ init_sql_dir }}"
            type: DirectoryOrCreate
      nodeSelector:
        {{ control_node_role_name }}: {{ node_role_value }}
      nodeName: {{ groups['kube-master'][0] }}
